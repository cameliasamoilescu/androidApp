<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bw_image_recognition"
    tools:context=".BuildingRecognitionActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/submit"
        android:src="@drawable/ic_baseline_home_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <Button
        android:id="@+id/choose_pic"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:layout_marginTop="404dp"
        android:backgroundTint="@color/kinda_black"
        android:fontFamily="@font/font"
        android:text="Choose photo"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prediction"
        android:layout_width="305dp"
        android:layout_height="192dp"
        android:layout_marginTop="376dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/rubik_mono_one"
        android:textColor="@color/kinda_black"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/predict"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:layout_marginTop="488dp"
        android:backgroundTint="@color/faded_grey"
        android:fontFamily="@font/nunito_extralight"
        android:text="Go"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageToBeClassified"
        android:layout_width="219dp"
        android:layout_height="236dp"
        android:layout_marginTop="116dp"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/discover_more"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:layout_marginTop="580dp"
        android:backgroundTint="@color/kinda_black"
        android:fontFamily="@font/font"
        android:text="More"
        android:visibility="invisible"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

